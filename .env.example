# ===== AmuseFit 환경 변수 설정 =====

# 데이터베이스 설정 (필수)
DATABASE_URL=postgresql://username:password@localhost:5432/amusefit

# 카카오 OAuth 설정 (필수 - 소셜 로그인)
KAKAO_CLIENT_ID=your_kakao_client_id_here
KAKAO_CLIENT_SECRET=your_kakao_client_secret_here

# SMS 인증 설정 (Twilio - 전화번호 인증용)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token  
TWILIO_PHONE_NUMBER=+82101234567

# 이메일 발송 설정 (Brevo - 이메일 인증용)
BREVO_API_KEY=your_brevo_api_key_here

# 세션 보안 설정 (필수)
SESSION_SECRET=your_very_long_random_session_secret_at_least_32_characters_long

# 개발 환경 설정
NODE_ENV=development
PORT=5000

# Google Analytics (선택사항)
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ===== 설정 가이드 =====

# 1. 데이터베이스 (Neon)
# - https://neon.tech 회원가입
# - 새 프로젝트 생성 후 연결 URL 복사

# 2. 카카오 OAuth
# - https://developers.kakao.com 로그인
# - 내 애플리케이션 > 새 애플리케이션 추가
# - 앱 키 > REST API 키 복사

# 3. Twilio SMS
# - https://twilio.com 회원가입
# - Account SID, Auth Token 복사
# - 한국 전화번호 구매

# 4. Brevo 이메일
# - https://brevo.com 회원가입  
# - SMTP & API > API 키 생성

# 5. 세션 시크릿
# - 최소 32자 이상의 랜덤 문자열 생성
# - node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"